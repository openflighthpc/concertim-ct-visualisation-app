<%
    set_title 'Cloud environment configuration'
-%>

<% content_for(:side_content) do %>
  <%= render 'actions' %>
<% end %>

<div class="dl_group">
  <h4>Cloud environment configuration</h4>
  <dl>

    <dt>Host URL</dt>
    <dd>
      <span><%= @config.host_url %></span>
    </dd>

    <dt>User handler port</dt>
    <dd>
      <span><%= @config.user_handler_port %></span>
    </dd>

    <dt>Cluster builder port</dt>
    <dd>
      <span><%= @config.cluster_builder_port %></span>
    </dd>

    <dt>Admin User ID</dt>
    <dd>
      <span><%= @config.admin_user_id %></span>
    </dd>

    <dt>Admin Password</dt>
    <dd>
      <code>XXXXXXX</code>
      <button class="button small secondary copyToClipboard" data-text="<%= @config.admin_password %>">Copy</button>
    </dd>

    <dt>Admin project ID</dt>
    <dd>
      <span><%= @config.admin_project_id %></span>
    </dd>
  </dl>
</div>

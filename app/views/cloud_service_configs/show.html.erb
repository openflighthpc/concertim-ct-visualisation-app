<%
    set_title 'Cloud environment configuration'
-%>

<% content_for(:side_content) do %>
  <%= render 'actions' %>
<% end %>

<div class="dl_list">
  <h4>Cloud environment configuration</h4>
  <dl>

    <dt>Internal Auth URL</dt>
    <dd>
      <span><%= @cloud_service_config.internal_auth_url %></span>
    </dd>

    <dt>User handler URL</dt>
    <dd>
      <span><%= @cloud_service_config.user_handler_base_url %></span>
    </dd>

    <dt>Cluster builder URL</dt>
    <dd>
      <span><%= @cloud_service_config.cluster_builder_base_url %></span>
    </dd>

    <dt>Admin User ID</dt>
    <dd>
      <span><%= @cloud_service_config.admin_user_id %></span>
    </dd>

    <dt>Admin Password</dt>
    <dd>
      <code>XXXXXXX</code>
      <button class="button small secondary copyToClipboard" data-text="<%= @cloud_service_config.admin_foreign_password %>">Copy</button>
    </dd>

    <dt>Admin project ID</dt>
    <dd>
      <span><%= @cloud_service_config.admin_project_id %></span>
    </dd>
  </dl>
</div>

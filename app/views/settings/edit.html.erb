<%
    set_title "Edit settings"
-%>

<%= simple_form_for @setting, url: settings_path, html: {class: 'no_border'} do |f| %>
  <%= f.input :metric_refresh_interval, hint: 'How frequently, in seconds, to update the metric values on interactive rack page.' %>
  <%= f.input :volume_gb_compute_units, as: :float, input_html: { min: 0.01, step: 0.01, placeholder: '0.25' },
              label: "Hourly compute_units per volume GB", hint: 'compute unit allocation per hour for each volume, per GB. Total allocation for a volume will be rounded up.' %>
  <%= f.button :submit %>
<% end %>

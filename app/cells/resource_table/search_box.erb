<% if @table.searchable? %>
  <%= form_tag nil, method: :get, class: :no_border do %>
    <div class="row collapse">
      <div class="small-8 large-10 columns">
        <%= text_field_tag :search, params[:search], placeholder: "Search", class: "small-4" %>
      </div>
      <div class="small-4 large-2 columns">
        <%= submit_tag "Go", class: "button postfix" %>
      </div>
    </div>
  <% end %>
<% end %>

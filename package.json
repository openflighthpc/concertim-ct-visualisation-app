{
  "devDependencies": {
    "@babel/preset-env": "^7.22.20",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "node_modules/",
      "vendor/bundle/ruby"
    ],
    "moduleDirectories": [
      "node_modules",
      "app/javascript"
    ],
    "moduleNameMapper": {
      "^canvas/(.*)$": "<rootDir>/app/javascript/mia/coffee/src/canvas/$1",
      "^util/(.*)$": "<rootDir>/app/javascript/mia/javascript/util/$1"
    },
    "testEnvironment": "jsdom"
  }
}
